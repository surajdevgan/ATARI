<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.icar.atari.KvksFrag.KvksFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">

    <Spinner
        android:id="@+id/sts"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"
        style="@style/Base.ThemeOverlay.AppCompat.Light"
        android:scrollbarStyle="outsideOverlay"
        android:popupBackground="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

    </Spinner>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lln"
            >


        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/android:list"
            >

        </ListView>
        </LinearLayout>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    app:contentPadding="10dp"
    android:id="@+id/carview1"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/colorPrimary"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/imgview"
        android:scaleType="fitXY"
        android:src="@drawable/atarinormal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tw1"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:text="ICAR-ATARI, Ludhiana"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textColor="@color/white"
        android:id="@+id/tw2"
        android:textSize="15dp"
        android:text="Address: Street Number 6, C-Block, Punjab Agricultural University, Ludhiana, Punjab 141004"
        />
    </LinearLayout>


</android.support.v7.widget.CardView>


</LinearLayout>


</FrameLayout>
